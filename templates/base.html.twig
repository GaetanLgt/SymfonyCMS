<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="py-2 bg-dark border-bottom">
			<div class="container d-flex flew-warp">
				<div class="dropdown">
					<a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						Mon blog
					</a>
					<div class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminDashboard">
						<a class="dropdown-item" href="{{path('admin')}}">Tableau de bord</a>
						<a class="dropdown-item" href="#">Menus</a>
					</div>
				</div>
				<div class="dropdown">
					<a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						Ajouter
					</a>
					<div class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminAdd">
						<a class="dropdown-item" href="#">Article</a>
						<a class="dropdown-item" href="#">Page</a>
					</div>
				</div>
			</div>
		</nav>
		<div class="container">
			<header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
				<a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none" href="{{ path('app_home') }}">
					<span class="fs-4">Mon blog</span>
				</a>

				<ul class="nav nav-pills align-items-center">
					<li class="nav-item">
						<a href="" class="nav-link text-dark">S'inscrire</a>
					</li>
					<li class="nav-item">
						<a href="" class="nav-link text-dark">Se connecter</a>
					</li>
				</ul>
			</header>
		</div>
		{% block body %}{% endblock %}
		<div class="container">
			<footer class="d-flex flex-warp justify-content-between align-items-center py-3 my-4 border-top">
				<div class="col-md-4 d-flex align-items center">
					<span class="copyright">Gaëtan LANGLET &copy;
						{{ 'now'|date('Y') }}
						Tous droits réservés</span>
				</div>
			</footer>
		</div>

		<script id="__bs_script__">
			// <![CDATA[
document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.js?v=2.27.11'><\/script>".replace("HOST", location.hostname));
// ]]>
		</script>
	</body>
</html>
